<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/profile_container"
        style="@style/profile_list_single_container">

        <LinearLayout
            style="@style/profile_list_single_content">
            <TextView
                android:id="@+id/profileItemName"
                style="@style/title_text_view"
                />
            <TextView
                android:id="@+id/profileItemStatus"
                style="@style/small_text_view"
                />

        </LinearLayout>

        <LinearLayout
            style="@style/profile_list_single_image_container"
            android:id="@+id/delete_area"
            android:layout_height="match_parent">
            <ImageButton
                style="@style/delete_image_button"
                android:id="@+id/delete_button"
                android:src="@drawable/ic_delete_black_24dp"/>

        </LinearLayout>

    </RelativeLayout>

    <View style="@style/profile_option_divisor"/>

</LinearLayout>